<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/text_view_title_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Обычный текст"
        android:textSize="20dp"
        android:textColor="@color/dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>

    <TextView
        android:id="@+id/text_view_title_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Текст с применением шрифта"
        android:textSize="20dp"
        android:textColor="@color/dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_regular"
        ></TextView>
    <TextView
        android:id="@+id/text_view_spanned_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="20dp"
        android:textColor="@color/dark_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_title_bold"
        ></TextView>

    <RadioGroup
        android:id="@+id/radio_group_span"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_spanned_text"
        >
        <RadioButton
            android:id="@+id/radio_button_background_color_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BackgroundColorSpan"
            ></RadioButton>
        <RadioButton
            android:id="@+id/radio_button_clickable_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClickableSpan"
            ></RadioButton>
        <RadioButton
            android:id="@+id/radio_button_image_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageSpan"
            ></RadioButton>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>