<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppMaterialDesign" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="ThemeAll" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">?themeColorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOne" parent="ThemeAll" >

        <item name="themeColorPrimary">@color/dark_red</item>
        <item name="themeColorPrimaryTwo">@color/light_blue</item>
    </style>

    <style name="ThemeTwo" parent="ThemeAll">
        <item name="themeColorPrimary">@color/light_blue</item>
        <item name="themeColorPrimaryTwo">@color/dark_red</item>
    </style>

    <style name="image_view_style">
        <item name="android:background">@color/image_fon</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,1:1</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="input_layout_wiki_style">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:backgroundTint">?themeColorPrimaryTwo</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fabAlignmentMode">end</item>
        <item name="navigationIcon">@drawable/ic_baseline_dehaze_24</item>
    </style>

    <style name="fab_style">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">?themeColorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_anchor">@id/bottom_app_bar</item>
        <item name="srcCompat">@drawable/ic_baseline_brightness_3_24</item>
        <item name="tint">@color/white</item>


    </style>


    <style name="bottom_sheet_line_style">
        <item name="android:layout_width">@dimen/width_line</item>
        <item name="android:layout_height">@dimen/height_line</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="android:background">?themeColorPrimaryTwo</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <style name="bottom_sheet_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop</item>
        <item name="paddingStart">@dimen/padding</item>
        <item name="paddingEnd">@dimen/padding</item>
        <item name="android:textColor">@color/black</item>

        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>


    <color name="image_fon">#009688</color>
    <color name="dark_red">#830808</color>
    <color name="light_blue">#0088FF</color>
    <color name="dark_red_night">#240200</color>
    <color name="light_blue_night">#000433</color>
</resources>