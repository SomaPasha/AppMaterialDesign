<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Transition
        app:constraintSetEnd="@+id/after_click"
        app:constraintSetStart="@+id/before_click"
        app:duration="1000">
        <OnClick app:targetId="@+id/image_animator_button" />

        <KeyFrameSet>
            <KeyPosition
                app:framePosition="20"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/input_layout_wiki_animation_first"
                app:percentX="1" />
        </KeyFrameSet>
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="80"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/input_layout_wiki_animation_two"
                app:percentX="1" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/before_click">
        <Constraint android:id="@+id/input_layout_wiki_animation_first">
            <Layout
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_animator_button"
                />
        </Constraint>
        <Constraint android:id="@+id/input_layout_wiki_animation_two">
            <Layout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_wiki_animation_first"
                />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/after_click">
        <Constraint android:id="@+id/input_layout_wiki_animation_first">
            <Layout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_wiki_animation_two"
                />
        </Constraint>
        <Constraint android:id="@+id/input_layout_wiki_animation_two">
            <Layout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_animator_button"
                />
        </Constraint>

    </ConstraintSet>

</MotionScene>